<parameter name="content">import { createClient } from '@/lib/supabase/server'
import { NextRequest, NextResponse } from 'next/server'
import type { User } from '@supabase/supabase-js'

// GET /api/users - List users (admin only)
export async function GET(request: NextRequest) {
  try {
    const supabase = createClient()
    
    // Check if user is authenticated and is admin
    const { data: { session } } = await supabase.auth.getSession()
    
    if (!session) {
      return NextResponse.json(
        { error: 'Unauthorized' },
        { status: 401 }
      )
    }

    // Check if user is admin
    const { data: adminData } = await supabase
      .from('admin_users')
      .select('role, is_active')
      .eq('user_id', session.user.id)
      .single()

    if (!adminData || adminData.role !== 'admin' || !adminData.is_active) {
      return NextResponse.json(
        { error: 'Forbidden: Admin access required' },
        { status: 403 }
      )
    }

    // Get query parameters for pagination
    const { searchParams } = new URL(request.url)
    const page = parseInt(searchParams.get('page') || '1')
    const limit = parseInt(searchParams.get('limit') || '20')
    const search = searchParams.get('search') || ''
    const sortBy = searchParams.get('sortBy') || 'created_at'
    const sortOrder = searchParams.get('sortOrder') || 'desc'

    // Calculate offset
    const offset = (page - 1) * limit

    // Get total count
    let countQuery = supabase
      .from('admin_users')
      .select('*', { count: 'exact', head: true })

    if (search) {
      countQuery = countQuery.or(`email.ilike.%${search}%,full_name.ilike.%${search}%`)
    }

    const { count } = await countQuery

    // Get users with pagination
    let usersQuery = supabase
      .from('admin_users')
      .select('*')
      .order(sortBy, { ascending: sortOrder === 'asc' })
      .range(offset, offset + limit - 1)

    if (search) {
      usersQuery = usersQuery.or(`email.ilike.%${search}%,full_name.ilike.%${search}%`)
    }

    const { data: users, error: usersError } = await usersQuery

    if (usersError) {
      console.error('Error fetching users:', usersError)
      return NextResponse.json(
        { error: 'Failed to fetch users' },
        { status: 500 }
      )
    }

    // Get user metadata from auth.users for each user
    const userIds = users?.map(u => u.user_id).filter(Boolean) || []
    
    let userMetadata: Record<string, any> = {}
    if (userIds.length > 0) {
      // Get user metadata
      const { data: authUsers } = await supabase.auth.admin.listUsers()
      if (authUsers?.users) {
        authUsers.users.forEach(user => {
          userMetadata[user.id] = {
            email: user.email,
            created_at: user.created_at,
            last_sign_in_at: user.last_sign_in_at,
            email_confirmed_at: user.email_confirmed_at,
            raw_user_meta_data: user.user_metadata
          }
        })
      }
    }

    // Combine data
    const combinedUsers = users?.map(user => ({
      ...user,
      auth_data: userMetadata[user.user_id] || null
    })) || []

    return NextResponse.json({
      users: combinedUsers,
      pagination: {
        page,
        limit,
        total: count || 0,
        totalPages: Math.ceil((count || 0) / limit)
      }
    })

  } catch (error) {
    console.error('Error in GET /api/users:', error)
    return NextResponse.json(
      { error: 'Internal server error' },
      { status: 500 }
    )
  }
}

// POST /api/users - Create new user (admin only)
export async function POST(request: NextRequest) {
  try {
    const supabase = createClient()
    
    // Check if user is authenticated and is admin
    const { data: { session } } = await supabase.auth.getSession()
    
    if (!session) {
      return NextResponse.json(
        { error: 'Unauthorized' },
        { status: 401 }
      )
    }

    // Check if user is admin
    const { data: adminData } = await supabase
      .from('admin_users')
      .select('role, is_active')
      .eq('user_id', session.user.id)
      .single()

    if (!adminData || adminData.role !== 'admin' || !adminData.is_active) {
      return NextResponse.json(
        { error: 'Forbidden: Admin access required' },
        { status: 403 }
      )
    }

    const body = await request.json()
    const { email, password, full_name, role } = body

    // Validate required fields
    if (!email || !password) {
      return NextResponse.json(
        { error: 'Email and password are required' },
        { status: 400 }
      )
    }

    // Validate password strength
    if (password.length < 8) {
      return NextResponse.json(
        { error: 'Password must be at least 8 characters' },
        { status: 400 }
      )
    }

    // Create user in Supabase Auth
    const { data: newUser, error: createError } = await supabase.auth.admin.createUser({
      email,
      password,
      email_confirm: true, // Auto-confirm email
      user_metadata: {
        full_name: full_name || ''
      }
    })

    if (createError) {
      console.error('Error creating user:', createError)
      return NextResponse.json(
        { error: createError.message },
        { status: 400 }
      )
    }

    // Add to admin_users table with specified role
    if (newUser.user && role) {
      const { error: insertError } = await supabase
        .from('admin_users')
        .insert({
          user_id: newUser.user.id,
          email,
          full_name: full_name || '',
          role: role || 'viewer',
          is_active: true
        })

      if (insertError) {
        console.error('Error inserting admin user:', insertError)
        // User was created but failed to add to admin table
        return NextResponse.json({
          warning: 'User created but failed to add to admin table',
          user: {
            id: newUser.user.id,
            email
          }
        }, { status: 201 })
      }
    }

    return NextResponse.json({
      message: 'User created successfully',
      user: {
        id: newUser.user?.id,
        email,
        full_name,
        role
      }
    }, { status: 201 })

  } catch (error) {
    console.error('Error in POST /api/users:', error)
    return NextResponse.json(
      { error: 'Internal server error' },
      { status: 500 }
    )
  }
}
</parameter>
